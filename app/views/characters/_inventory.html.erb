<% if @character.user_id == current_user.id %>
  <div class="card text-left" style="border: 2px solid #000; padding: 15px; margin-bottom: 20px; width: 500px; height: 220px;">
    <h4 class="card-header text-center text-white bg-primary">Inventory</h4>
    <div class="card-body">
      <div class="inventory-grid " style="display: grid; grid-template-columns: repeat(5, 1fr); gap: 10px;">
        <% (1..10).each do |index| %>
          <% item = @character.inventory.items[index - 1] %>
          <div class="inventory-item ">
            <% if item %>
              <%= image_tag(item.item_image, style: 'width: 50px; height: 50px; border-radius: 10%; box-shadow: 2px 2px 10px #888888;') %>
                <%= form_with(model: @selected_character, url: equip_item_character_path(@selected_character, item), method: :post, local: true, params: { item_id: item.id }) do |form| %>
                  <%= form.button "Equip", class: "btn btn-outline-primary btn-sm mt-2" %>
                <% end %>
            <% else %>
              <!-- Empty card content -->
              <div style="width: 50px; height: 50px; border-radius: 10%; border: 1px solid #000; box-shadow: 2px 2px 10px #888888;"></div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>