                      <% end %>
                    </div>
                  <% end %>
                </div>
                <h4 class="card-title mt-2">Physical</h4>
                <div class="row mt-3">
                  <div class="col">
                    <div class="card mb-3">
                      <div class="card-body" style="height: 350px;">
