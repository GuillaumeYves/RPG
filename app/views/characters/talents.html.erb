<% if @character.user_id == current_user.id %>
  <div class="mt-5">
    <div style="display: flex; flex-direction: row;">
      <!-- First column -->
      <div class="col" style="margin-right: 20px;">
        <div class="card text-center mx-auto" style="width: 800px; height: 1200px; border: 2px solid #000; box-shadow: 5px 5px 10px #888888; overflow: auto;">
          <div class="card-body" style="width: 100%; margin-left: 5px;">
            <h4 class="card-header text-white bg-primary mx-auto" style="width: 200px;">Talents</h4>
              <p><small>Choose your talents wisely, as you can only pick one talent in each row.</small></p><br>
                <div style="position: relative;">
                  <% if @character.user_id == current_user.id %>
                    <div class="position-absolute start-50 translate-middle-x" style="top: -25px;">
                      <% if @character.skill_points == 1 %>
                        <strong class="badge rounded-pill bg-warning" style="color: black;">You have 1 Talent point</strong><br>
                      <% elsif @character.skill_points > 1 %>
                        <strong class="badge rounded-pill bg-warning" style="color: black;">You have <%= @character.skill_points %> Talent points</strong><br>
                      <% end %>
                    </div>
                  <% end %>
                </div>
            <% @character.skills.order(:level_requirement).group_by(&:level_requirement).each_with_index do |(level, level_skills), index| %>
              <h4 class="card-title mt-2">Level <%= level %></h4>
              <div class="row mt-3">
                <% level_skills.each_slice(2) do |skill_pair| %>
                  <% skill1, skill2 = skill_pair %>
                  <% [skill1, skill2].each do |skill| %>
                    <div class="col-md-6">
                      <div class="card mb-3">
                        <div class="card-body" style="height: 350px;">
                          <h5 class="card-title"><%= skill.name %></h5>
                          <p style="font-size:12px; margin-top:-10px; margin-bottom: 1px"><%= skill.skill_type&.capitalize %></p>
                          <% if skill.unlocked %>
                            <%= image_tag skill.skill_image, style: 'width: 100px; height: 100px; border: 2px solid #000; box-shadow: 2px 2px 10px #888888; margin-bottom: 5px;' %>
                            <p class="card-text"><%= skill.description %></p>
                            <%= form_with(url: unlearn_skill_character_path(@character, skill_id: skill.id), method: :post, local: true) do |form| %>
                              <%= form.submit 'Unlearn', class: "btn btn-outline-danger mb-1", data: { confirm: 'Are you sure you want to unlock this skill?' }, style: "position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);" %>
                            <% end %>
                          <% else %>
                            <%= image_tag skill.skill_image, style: 'width: 100px; height: 100px; border: 2px solid #000; box-shadow: 2px 2px 10px #888888; margin-bottom: 5px; filter: grayscale(100%);' %>
                            <p class="card-text"><%= skill.description %></p>
                            <%= form_with(url: learn_skill_character_path(@character, skill_id: skill.id), method: :post, local: true) do |form| %>
                              <%= form.submit 'Learn', class: "btn btn-outline-primary mb-1", data: { confirm: 'Are you sure you want to unlock this skill?' }, style: "position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);" %>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Paragon column -->
      <div class="col">
        <div class="card text-center mx-auto" style="width: 800px; height: 1200px; border: 2px solid #000; box-shadow: 5px 5px 10px #888888; overflow: auto; <% if @character.level < 100 %>filter:  grayscale(100%);<% end %>">
          <div class="card-body" style="width: 100%; margin-left: 5px;">
            <h4 class="card-header text-white bg-primary mx-auto" style="width: 200px;">Paragon</h4>
